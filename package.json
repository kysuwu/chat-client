{
  "name": "kysanonchat",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": {
    "anonchat": "dist/main.cjs"
  },
  "scripts": {
    "dev": "cross-env STAGE=DEV tsx src/main.ts",
    "prev": "cross-env STAGE=PREV tsx src/main.ts",
    "build-js": "tsup ./src/main.ts",
    "build-exe": "pkg . --no-bytecode ",
    "build": "yarn build-js && yarn build-exe",
    "lint": "eslint . --fix",
    "prepublishOnly": "npm run build"
  },
  "pkg": {
    "assets": [
      "./node_modules/blessed/**/*",
      "./node_modules/axios/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ]
  },
  "dependencies": {
    "axios": "^1.7.2",
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "moment": "^2.30.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^20.14.2",
    "@types/yargs": "^17.0.32",
    "cross-env": "^7.0.3",
    "eslint": "9.x",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-require-extensions": "^0.1.3",
    "globals": "^15.6.0",
    "pkg": "^5.8.1",
    "tsup": "^8.1.0",
    "tsx": "^4.14.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.14.1"
  }
}
